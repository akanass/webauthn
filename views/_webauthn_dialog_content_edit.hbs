<div class="mdc-dialog__title">
  <div class="mdc-typography--headline4">{{edit}}</div>
</div>
<div class="mdc-dialog__content">
  <div id="edit-security-key-title" class="mdc-dialog__content-title mdc-typography--headline6">{{securityKey}}</div>
  <div id="edit-biometric-title" class="mdc-dialog__content-title mdc-typography--headline6">{{biometric}}</div>
  <div id="error-edit-credential" class="error-message mdc-typography--subtitle2">
    <i class="material-icons" aria-hidden="true">error_outline</i>
    <span id="error-edit-credential-message" class="message"></span>
  </div>
  <div class="content-center direction-column">
    <label id="edit-credential-text-field" class="mdc-text-field mdc-text-field--filled mdc-text-field--label-floating">
      <span class="mdc-text-field__ripple"></span>
      <span class="mdc-floating-label mdc-floating-label--float-above"
            id="edit-credential-name-label">{{labelEditInput}}</span>
      <input id="edit-credential-name" required minlength="2" class="mdc-text-field__input"
             type="text"
             aria-labelledby="edit-credential-name-label" autocomplete="off" spellcheck="false" />
      <span class="mdc-line-ripple"></span>
    </label>
    <input type="hidden" id="edit-credential-original-name" />
    <input type="hidden" id="edit-credential-id" />
    <div class="mdc-typography--caption">{{createdAt}}: <span id="edit-credential-created-at"></span></div>
  </div>
</div>
<div class="mdc-dialog__actions content-center justify-content-space">
  <button id="edit-remove-action" type="button"
          class="mdc-button mdc-dialog__button mdc-button--raised">
    <div class="mdc-button__ripple"></div>
    <i class="material-icons mdc-button__icon" aria-hidden="true">remove_circle_outline</i>
    <span class="mdc-button__label">{{remove}}</span>
  </button>
  <button id="edit-done-action" type="button"
          class="mdc-button mdc-dialog__button mdc-button--raised">
    <div class="mdc-button__ripple"></div>
    <i class="material-icons mdc-button__icon" aria-hidden="true">done_outline</i>
    <span class="mdc-button__label">{{done}}</span>
  </button>
</div>
